<h2>Ändrar <%= campain.namn %></h2><br/>

<form action="/campain/update/<%= campain.id %>" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="namn" class="col-sm-2">Namn</label>
    <div class="col-sm-10">
      <input type="text" value="<%= campain.namn %>" name="namn" class="form-control"/>
    </div>
  </div>

  <div class="form-group">
    <label for="info" class="col-sm-2">Info</label>
    <div class="col-sm-10">
      <textarea type="text" value="<%= campain.info %>" name="info" class="form-control"><%= campain.info %></textarea>
    </div>
  </div>

  <br/>
  <div class="well">
    <input type="submit" value="Ändra" class="btn btn-lg btn-primary"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
  </div>
</form>