<h2>Ändrar <%= contact.namn %></h2><br/>

<form action="/contact/update/<%= contact.id %>" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="namn" class="col-sm-2">Namn</label>
    <div class="col-sm-10">
      <input type="text" value="<%= contact.namn %>" name="namn" class="form-control"/>
    </div>
  </div>

  <div class="form-group">
    <label for="titel" class="col-sm-2">Titel</label>
    <div class="col-sm-10">
      <input type="text" value="<%= contact.titel %>" name="titel" class="form-control"/>
    </div>
  </div>

  <br/>
  <div class="well">
    <input type="submit" value="Ändra" class="btn btn-lg btn-primary"/>
    <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
  </div>
</form>